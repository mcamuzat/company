{% extends 'base.html.twig' %}

{% block title %}sociétés{% endblock %}

{% block body %}
    <h1>sociétés</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Siren</th>
                <th>Ville d'immatriculation</th>
                <th>Date d'immatriculation</th>
                <th>Capital</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.siren }}</td>
                <td>{{ company.immatriculationCity }}</td>
                <td>{{ company.immatriculationDate ? company.immatriculationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ company.capital }}</td>
                <td>
                    <a href="{{ path('company_show', {'id': company.id}) }}">voir</a>
                    <a href="{{ path('company_edit', {'id': company.id}) }}">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas de société</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('company_new') }}">Ajouter</a>
{% endblock %}
